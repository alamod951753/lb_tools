@using ToolsDev.Utilities.Helper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 授權模擬系統</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/site.css?v=@UtilityHelper.GetAppSetting("ContentVersion")" />
    <style>
        @@media (max-width: 575px) {
            .dropdown-menu {
                border: 0px;
                padding: 0rem 1rem 0rem 40px;
            }
        }
    </style>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Images/logo.png" height="26" width="136" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link text-dark dropdown-toggle" data-toggle="dropdown">即時授權<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" href="@Url.Action("Create", "RealtimeAuth")">單筆</a></li>
                                <li><a class="nav-link" href="@Url.Action("Upload", "RealtimeAuth")">多筆上傳</a></li>
                                <li><a class="nav-link" href="@Url.Action("Query", "RealtimeAuth")">查詢</a></li>
                            </ul>
                        </li>
                        @*<li class="nav-item dropdown">
                            <a href="#" class="nav-link text-dark dropdown-toggle" data-toggle="dropdown">批次授權<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" href="@Url.Action("Upload", "BatchAuth")">上傳</a></li>
                                <li><a class="nav-link text-dark" href="@Url.Action("Query", "BatchAuth")">查詢</a></li>
                            </ul>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - 授權模擬系統
        </div>
    </footer>
</body>
</html>
